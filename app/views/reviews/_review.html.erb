<%= turbo_frame_tag dom_id(review) do %>
  <div class="py-5 border-b border-gray-100 text-sm">
    <div class="flex gap-2">
      <h3 class=""><%= review.user.email %>: </h3>
      <h3 class="text-sm">(<%= review.created_at.to_fs(:short) %>)</h3>
    </div>
    <div class="font-bold text-gray-700">
      <%= review.body %>
    </div>
    <div class="flex gap-5 mt-2">
      <% if review.user == current_user %>
        <%= link_to 'Edit', edit_sneaker_review_path(review.sneaker, review), class: 'text-gray-500' %>
        <%= button_to 'Delete', sneaker_review_path(review.sneaker, review), method: :delete, class: 'text-red-500' %>
      <% end %>
    </div>
  </div>
<% end %>
